{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"semi": false,
	"printWidth": 100,
	"plugins": [
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss",
		"@ianvs/prettier-plugin-sort-imports"
	],
	"overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }],
	"importOrder": [
		"^\\$app/(.*)$",
		"",
		"^\\$lib/(.*)$",
		"^\\$env/(.*)$",
		"",
		"^\\$ui/(.*)$",
		"^svelte$",
		"^svelte/(.*)$",
		"^@sveltejs/(.*)$",
		"^[./]"
	],
	"importParserPlugins": ["typescript", "jsx", "decorators-legacy"]
}
